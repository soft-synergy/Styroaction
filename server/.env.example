# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/styroaction
# lub dla MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/styroaction

# Server Port
PORT=5005

# JWT Secret (wygeneruj losowy string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Environment
NODE_ENV=production
